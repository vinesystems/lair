{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automergeType": "branch",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "matchCurrentVersion": "/^0/",
      "automerge": true
    }
  ],
  "labels": [
    "dependencies"
  ]
}
